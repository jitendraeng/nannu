package practice;

import java.util.Iterator;

public class JavaPractice {

	public static void main(String[] args) {

		int arr[] = { 1, 2, 3, 4, 5, 6 };

		int arr1[] = { 1, 2, 3, 4, 5, 6 };
		int arr2[] = { 1, 2, 3, 4, 5, 7 };

		boolean same = true;

		if (arr.length != arr1.length || arr1.length != arr2.length) {

			same = false;

		} else {

			for (int i = 0; i < arr.length; i++) {
				
				if(arr[i]!=arr1[i] || arr1[i]!=arr2[i]) {
					
					same =false;
					break;
					
				}

			}

		}

		if (same) {

			System.out.println(" 3 arrays are same");
		} else {
			System.out.println(" 3 arrays are not same");

		}

	}
}